<div class="signup-box2">
  <div class="signup-box-inner">
    <h1>アカウント編集</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="signup-box-name">
        <%= f.label :name, "ニックネーム" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        <%= render "devise/shared/tmp_error_msg", resource: resource, target: :name %>
      </div>


      <div class="signup-box-email">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
        <%= render "devise/shared/tmp_error_msg", resource: resource, target: :email %>
      </div>

      <div class="signup-box-icon-text">アイコン</div>
      <div class="signup-box-icon">
        <%= f.label :image, "画像を選択" %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div id="new-image"></div>

      <div class="signup-box-login">
        <%= f.submit "編集" %>
      </div>
    <% end %>

</div>

<%= javascript_pack_tag 'preview' %>