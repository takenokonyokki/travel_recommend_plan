<h1><%= @plan.title %></h1>

<% @contents.each do |content| %>
  <%= content.order %>
  <%= content.hour %>:<%= content.minute %>
  <%= content.place %>
  <%= image_tag content.get_image(50,50) %>
  <%= content.explanation %>
  <h3>【観光地・店舗】の基本情報</h3>
  <p><%= content.name %></P>
  <p><%= content.address %></p>
  <p><%= content.telephonenumber %></p>
  <p><%= content.access %></p>
  <P><%= content.businesshours %></P>
  <P><%= content.price %></P>
  <P><%= content.stay_time %></P>
  <p id="star-rate-<%= content.id %>"></p>
    <script>
    $('#star-rate-<%= content.id %>').raty({
      size: 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      half: true,
      readOnly: true,
      score: <%= content.rate %>,
    });
    </script>
  <%= link_to "旅行プランを編集", edit_plan_content_path(content.id) %>
<% end %>
